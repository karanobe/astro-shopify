---
// HeroBanner.astro
const { title, subtitle, ctaText, ctaLink, backgroundImage } = Astro.props;
---

<style>
  .hero-background {
    background-image: url('/hero-background.jpg') !important;
    background-size: cover !important;
    background-position: center !important;
    background-repeat: no-repeat !important;
  }
</style>

<section class="relative text-white min-h-[600px] flex items-center hero-background">
  <!-- Overlay -->
  <div class="absolute inset-0 bg-opacity-50"></div>

  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-32 text-center lg:text-left">
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold leading-tight mb-4">
      {title}
    </h1>
    <p class="text-lg sm:text-xl lg:text-2xl mb-8 max-w-2xl">
      {subtitle}
    </p>
    {ctaText && ctaLink && (
      <a
        href={ctaLink}
        class="inline-block bg-gradient-to-r from-[#002A38] to-[#007531] hover:bg-black text-white font-semibold px-8 py-4 rounded-lg transition-colors cursor-pointer"
      >
        {ctaText}
      </a>
    )}
  </div>
</section>
